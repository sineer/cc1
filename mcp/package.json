{
  "name": "uci-config-mcp-server",
  "version": "2.0.0",
  "description": "Unified MCP server for UCI Config Tool with testing, snapshots, diffs, and dashboards",
  "main": "server-unified.js",
  "type": "module",
  "scripts": {
    "start": "node server-unified.js",
    "dev": "node --watch server-unified.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:mcp": "node client.js test",
    "client": "node client.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "vitest": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "@vitest/coverage-v8": "^1.6.0",
    "happy-dom": "^14.12.0"
  },
  "keywords": [
    "mcp",
    "uci",
    "openwrt",
    "testing"
  ],
  "author": "UCI Config Tool",
  "license": "GPL-2.0"
}
