# Hotel captive portal configuration for uspot
# Represents typical hospitality industry deployment

config uspot 'portal'
	option enabled '1'
	option interface 'guest'
	option portal_name 'Hotel WiFi Portal'
	option company_name 'Grand Hotel'
	option logo_url '/www/images/hotel-logo.png'
	option redirect_url 'http://hotel.example.com'
	option session_timeout '14400'
	option idle_timeout '3600'
	option bandwidth_down '10240'
	option bandwidth_up '2048'

config uspot 'authentication'
	option auth_mode 'voucher'
	option voucher_length '8'
	option voucher_charset 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789'
	option voucher_duration '86400'
	option max_devices_per_voucher '3'
	option enable_room_auth '1'

config uspot 'ui_customization'
	option theme 'hotel'
	option primary_color '#2c5282'
	option background_image '/www/images/hotel-bg.jpg'
	option welcome_message 'Welcome to Grand Hotel WiFi'
	option terms_url 'http://hotel.example.com/terms'
	option privacy_url 'http://hotel.example.com/privacy'

config uspot 'network_settings'
	option dns_servers '8.8.8.8 8.8.4.4'
	option allowed_domains 'hotel.example.com booking.com tripadvisor.com'
	option blocked_ports '25 465 587 993 995'
	option content_filter '1'
	option adult_content_filter '1'

config uspot 'reporting'
	option enable_analytics '1'
	option analytics_retention '30'
	option export_format 'csv'
	option daily_reports '1'
	option admin_email 'admin@hotel.example.com'