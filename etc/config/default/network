# uspot Captive Portal Network Configuration
# OpenWRT 23.05+ UCI format
# Network interface configuration for captive portal

# Captive portal interface configuration
config interface 'captive'
	option proto 'static'
	option ipaddr '10.0.0.1'
	option netmask '255.255.252.0'
	option type 'bridge'
	option ifname 'captive-br'
	option broadcast '10.0.3.255'
	option dns '10.0.0.1'
	
	# Bridge settings for captive portal
	option bridge_empty '1'
	option igmp_snooping '0'
	option multicast_querier '0'

# WiFi interface for captive portal (example)
config wifi-iface 'captive_wifi'
	option device 'radio0'
	option network 'captive'
	option mode 'ap'
	option ssid 'Guest-Network'
	option encryption 'none'
	option isolate '1'
	option hidden '0'
	option wmm '1'
	option short_gi_20 '1'
	option short_gi_40 '1'
	option max_inactivity '300'

# VLAN configuration for captive portal (if using VLANs)
config switch_vlan 'captive_vlan'
	option device 'switch0'
	option vlan '10'
	option ports '1 2 3 6t'
	option vid '10'